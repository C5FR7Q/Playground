<resources>

	<style name = "Theme.Playground.Splash">
		<item name = "android:windowBackground">@drawable/splash_background</item>
	</style>

	<!-- Base application theme. -->
	<style name = "Theme.Playground" parent = "Theme.MaterialComponents.DayNight.DarkActionBar">
		<!-- Primary brand color. -->
		<item name = "colorPrimary">@color/purple_500</item>
		<item name = "colorPrimaryVariant">@color/purple_700</item>
		<item name = "colorOnPrimary">@color/white</item>
		<!-- Secondary brand color. -->
		<item name = "colorSecondary">@color/teal_200</item>
		<item name = "colorSecondaryVariant">@color/teal_700</item>
		<item name = "colorOnSecondary">@color/black</item>
		<item name = "android:windowBackground">?colorPrimary</item>
		<!-- Status bar color. -->
		<item name = "android:windowTranslucentStatus">true</item>
		<item name = "android:windowTranslucentNavigation">true</item>
		<item name = "windowActionBar">false</item>
		<item name = "windowNoTitle">true</item>
	</style>

	<style name = "Theme.Playground.AppBarOverlay" parent = "ThemeOverlay.AppCompat.Dark.ActionBar" />

	<style name = "Theme.Playground.PopupOverlay" parent = "ThemeOverlay.AppCompat.Light" />
</resources>